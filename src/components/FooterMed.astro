---
import User from "../../public/imgs/icons/User";
import Button from "./UI/Button";
import Input from "./UI/Input";
import TextArea from "./UI/TextArea";
import { URL } from "../data/utils";
import FormContact from "./FormContact";
---

<footer id="contact" class="w-full bg-[var(--black)] text-white py-12 px-6">
  <div class="max-w-[1200px] w-full mx-auto flex flex-col gap-6 px-6">
    <!-- Contenedor superior -->

    <div class="flex flex-col md:flex-row justify-between gap-8">
      <!-- Izquierda: Logo y título -->
      <div class="flex flex-col gap-5">
        <h1 class="text-3xl font-bold">
          GRUPO<span class="text-[var(--red)]">BZN</span>
        </h1>
        <h2 class="text-3xl md:text-5xl font-bold max-w-xl">
          SABEMOS LO QUE <span class="text-[var(--red)]">HACEMOS</span>
        </h2>
      </div>

      <!-- Derecha: Menú y formulario -->
      <div class="flex flex-col md:flex-row gap-5">
        <!-- Menú de navegación -->
        <nav
          class="flex flex-col items-start md:items-start text-start md:text-left w-full w-auto"
        >
          <h3 class="font-bold text-lg mb-2">MENÚ</h3>
          <div class="flex flex-col gap-2">
            <a
              href="#"
              class="hover:text-[var(--white)] text-[var(--black-300)] text-sm"
              >NOSOTROS</a
            >
            <a
              href="#works"
              class="hover:text-[var(--white)] text-[var(--black-300)] text-sm"
              >TRABAJOS</a
            >
            <a
              href="#services"
              class="hover:text-[var(--white)] text-[var(--black-300)] text-sm"
              >SERVICIOS</a
            >
            <a
              href="#about"
              class="hover:text-[var(--white)] text-[var(--black-300)] text-sm"
              >QUIÉNES SOMOS</a
            >
          </div>

          <div class="flex flex-col items-start gap-4 mt-4">
            <a
              href="https://wa.me/5491122334455"
              target="_blank"
              aria-label="WhatsApp"
              class="hover:scale-110 transition"
            >
              <svg
                class="w-6 h-6 fill-white"
                viewBox="0 0 32 32"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  d="M16.003 2.007c-7.83 0-14 6.17-14 14 0 2.464.642 4.897 1.858 7.042l-1.944 7.006 7.164-1.88c2.08 1.144 4.44 1.742 6.922 1.742 7.83 0 14-6.17 14-14s-6.17-14-14-14zm0 25.5c-2.21 0-4.37-.58-6.27-1.675l-.45-.26-4.25 1.115 1.155-4.197-.29-.482c-1.12-1.86-1.71-4.002-1.71-6.165 0-6.34 5.16-11.5 11.5-11.5s11.5 5.16 11.5 11.5-5.16 11.5-11.5 11.5zm6.04-8.672c-.33-.165-1.95-.96-2.25-1.068-.3-.11-.52-.165-.74.165-.22.33-.85 1.066-1.045 1.285-.19.22-.38.248-.71.082-.33-.165-1.4-.515-2.67-1.645-.985-.875-1.65-1.96-1.845-2.29-.19-.33-.02-.51.145-.675.15-.15.33-.38.5-.57.165-.19.22-.33.33-.55.11-.22.055-.412-.028-.577-.083-.165-.74-1.78-1.015-2.44-.267-.635-.54-.55-.74-.56l-.63-.012c-.22 0-.575.083-.875.412s-1.15 1.12-1.15 2.727 1.177 3.163 1.34 3.38c.165.22 2.3 3.51 5.57 4.922.78.337 1.39.54 1.86.69.78.25 1.49.215 2.055.13.63-.094 1.95-.796 2.227-1.56.275-.765.275-1.42.19-1.56-.082-.14-.3-.22-.63-.385z"
